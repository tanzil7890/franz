// Example 4: Scientific Notation Parsing
(println "Example 4: Scientific Notation")
large_num_str = "1.5e6"
large_num = (float large_num_str)
(println "  \"1.5e6\" = " large_num)
(println "  (1,500,000 in standard notation)")
(println "")

// Example 5: Data Validation Pattern
(println "Example 5: Input Validation")
inputs = (list "123" "456" "789")
input1 = (get inputs 0)
input2 = (get inputs 1)
input3 = (get inputs 2)
val1 = (integer input1)
val2 = (integer input2)
val3 = (integer input3)
total = (add val1 (add val2 val3))
(println "  Processing list of strings: [\"123\", \"456\", \"789\"]")
(println "  Sum: " total)
(println "")

// Example 6: Precision Control
(println "Example 6: Float Precision")
precise = 3.14159265359
rounded_str = (string precise)
(println "  Original: 3.14159265359")
(println "  As string: " rounded_str)
truncated = (integer precise)
(println "  Truncated to int: " truncated)
(println "")

// Example 7: Round Trip Conversion
(println "Example 7: Round Trip Conversion")
original = 999
step1 = (string original)
step2 = (integer step1)
matches = (is original step2)
(println "  Original: " original)
(println "  -> string -> integer: " step2)
(println "  Preserved: " (if matches {<- "YES"} {<- "NO"}))
(println "")

// Example 8: Mixed Type Arithmetic
(println "Example 8: Mixed Type Operations")
int_val = (integer "10")
float_val = (float "3.5")
result = (multiply int_val float_val)
(println "  integer(\"10\") * float(\"3.5\") = " result)
(println "")

// Example 9: Percentage Calculator
(println "Example 9: Percentage Calculator")
total_items = (integer "200")
completed_items = (integer "75")
percentage = (multiply (divide (float completed_items) (float total_items)) 100.0)
(println "  Completed: " completed_items " / " total_items)
(println "  Progress: " percentage "%")
(println "")

