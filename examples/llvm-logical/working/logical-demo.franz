// ============================================================================
// 8. De Morgan's Laws Demonstration
// ============================================================================
(println "8. De Morgan's Laws")
(println "-------------------")

a = 1
b = 0

// NOT (A AND B) = (NOT A) OR (NOT B)
left_side = (not (and a b))
right_side = (or (not a) (not b))

(println "A:" a "B:" b)
(println "NOT (A AND B):" left_side)
(println "(NOT A) OR (NOT B):" right_side)
(println "Are equal:" (is left_side right_side))
(println "")

// ============================================================================
// 9. Short-Circuit Behavior (Variadic)
// ============================================================================
(println "9. Variadic Operators")
(println "---------------------")

// AND with multiple conditions
all_true = (and 1 1 1 1 1)
one_false = (and 1 1 0 1 1)

(println "AND with all true:" all_true)
(println "AND with one false:" one_false)

// OR with multiple conditions
all_false = (or 0 0 0 0 0)
one_true = (or 0 0 1 0 0)

(println "OR with all false:" all_false)
(println "OR with one true:" one_true)
(println "")

