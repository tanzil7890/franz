fibonacci = {n ->
  <- (if
    (is n 0) {<- 0}
    (is n 1) {<- 1}
    {<- (add (fibonacci (subtract n 1)) (fibonacci (subtract n 2)))}
  )
}

(println "Testing fibonacci with until...")

(until "stop" {state n ->
  (println (add n 1) " - " (fibonacci (add n 1)))

  // Stop after 10 iterations
  <- (if (is n 9) {<- "stop"} {<- "continue"})
})

(println "Done!")
